<Window x:Class="POMIDOR.Views.PomodoroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pomodoro" Width="420" Height="520" WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Status -->
            <RowDefinition Height="Auto"/>
            <!-- Timer -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Settings -->
            <RowDefinition Height="*"/>
            <!-- Stats -->
        </Grid.RowDefinitions>

        <!-- Status -->
        <TextBlock x:Name="PhaseLabel" Grid.Row="0" Text="Tryb: bezczynny"
                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

        <!-- Duży timer -->
        <Border Grid.Row="1" Padding="8" Background="#111" CornerRadius="8" Margin="0,0,0,10">
            <TextBlock x:Name="TimerLabel" Text="25:00" Foreground="White"
                       FontSize="56" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>

        <!-- Sterowanie -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
            <Button x:Name="StartBtn" Content="Start" Width="90" Margin="4" Click="Start_Click"/>
            <Button x:Name="PauseBtn" Content="Pauza" Width="90" Margin="4" Click="Pause_Click"/>
            <Button x:Name="ResetBtn" Content="Reset" Width="90" Margin="4" Click="Reset_Click"/>
        </StackPanel>

        <!-- Ustawienia -->
        <GroupBox Grid.Row="3" Header="Ustawienia" Margin="0,0,0,12">
            <StackPanel Margin="8">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <TextBlock Text="Praca (min):" VerticalAlignment="Center" Width="110"/>
                    <TextBox x:Name="WorkBox" Width="60" Text="25" HorizontalContentAlignment="Center"/>
                    <TextBlock Text="  Przerwa (min):" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    <TextBox x:Name="BreakBox" Width="60" Text="5" HorizontalContentAlignment="Center" Margin="4,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <CheckBox x:Name="AutoSwitchBox" IsChecked="True" Content="Auto przełączanie praca ↔ przerwa"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="SoundBox" IsChecked="True" Content="Dźwięk po zakończeniu sesji"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Statystyki -->
        <GroupBox Grid.Row="4" Header="Statystyki">
            <StackPanel Margin="8">
                <TextBlock>
                    <Run Text="Ukończone cykle: "/><Run x:Name="CyclesText" Text="0"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Łącznie pracy: "/><Run x:Name="TotalWorkText" Text="00:00:00"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Łącznie przerw: "/><Run x:Name="TotalBreakText" Text="00:00:00"/>
                </TextBlock>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
