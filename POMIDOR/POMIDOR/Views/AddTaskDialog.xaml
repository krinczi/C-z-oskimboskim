<Window x:Class="POMIDOR.Views.AddTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj zadanie" Width="520" Height="560" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Priority -->
            <RowDefinition Height="Auto"/>
            <!-- Due -->
            <RowDefinition Height="Auto"/>
            <!-- Category -->
            <RowDefinition Height="Auto"/>
            <!-- Goal -->
            <RowDefinition Height="Auto"/>
            <!-- SubTasks add -->
            <RowDefinition Height="*"/>
            <!-- SubTasks list -->
            <RowDefinition Height="Auto"/>
            <!-- Desc -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Tytuł -->
        <TextBox x:Name="TitleBox" Grid.Row="0" Margin="0,0,0,8"/>

        <!-- Priorytet -->
        <ComboBox x:Name="PriorityBox" Grid.Row="1" Margin="0,0,0,8" SelectedIndex="1">
            <ComboBoxItem Content="Low"/>
            <ComboBoxItem Content="Normal"/>
            <ComboBoxItem Content="High"/>
        </ComboBox>

        <!-- Termin -->
        <DatePicker x:Name="DuePicker" Grid.Row="2" Margin="0,0,0,8"/>

        <!-- Kategoria -->
        <TextBox x:Name="CategoryBox" Grid.Row="3" Margin="0,0,0,8"/>

        <!-- Cel -->
        <TextBox x:Name="GoalBox" Grid.Row="4" Margin="0,0,0,8"/>

        <!-- Dodawanie sub-tasków -->
        <DockPanel Grid.Row="5" LastChildFill="False" Margin="0,6,0,6">
            <TextBox x:Name="SubTitleBox" Width="280" Margin="0,0,8,0"/>
            <DatePicker x:Name="SubDuePicker" Width="150" Margin="0,0,8,0"/>
            <Button Content="Dodaj podzadanie" Width="140" Click="AddSub_Click"/>
        </DockPanel>

        <!-- Lista sub-tasków -->
        <ListBox x:Name="SubsList" Grid.Row="6" Height="160">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                  VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="6,0,6,0"/>
                        <DatePicker Grid.Column="2" SelectedDate="{Binding Due, Mode=TwoWay}"/>
                        <Button Grid.Column="3" Content="Usuń" Margin="8,0,0,0" Click="RemoveSub_Click"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Opis -->
        <TextBox x:Name="DescBox" Grid.Row="7" Margin="0,8,0,8"
                 AcceptsReturn="True" Height="120" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>

        <!-- Przyciski -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkBtn" Content="OK" Width="90" Margin="0,0,8,0" Click="OkBtn_Click"/>
            <Button Content="Anuluj" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
